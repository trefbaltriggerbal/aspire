@page "/counter"
@rendermode InteractiveServer
@inject Microsoft.Extensions.Localization.IStringLocalizer<Counter> L

<PageTitle>@L["PageTitle"]</PageTitle>

<h1>@L["Heading"]</h1>

<p role="status">@L["Current"] @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">@L["Button"]</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
