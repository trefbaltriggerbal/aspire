@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a class="me-2" href="Culture/Set?culture=en&redirectUri=@Uri.EscapeDataString(new Uri(NavigationManager.Uri).GetComponents(UriComponents.PathAndQuery, UriFormat.Unescaped))">🇬🇧</a>
            <a class="me-2" href="Culture/Set?culture=fr&redirectUri=@Uri.EscapeDataString(new Uri(NavigationManager.Uri).GetComponents(UriComponents.PathAndQuery, UriFormat.Unescaped))">🇫🇷</a>
            <a href="Culture/Set?culture=nl&redirectUri=@Uri.EscapeDataString(new Uri(NavigationManager.Uri).GetComponents(UriComponents.PathAndQuery, UriFormat.Unescaped))">🇳🇱</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
